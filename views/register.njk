{% extends "layout.njk" %}

{% block content %}

<h1>Register</h1>

<form method="post" action="/register">
  <div>
    <label>Username</label><br>
    <input type="text" name="username" required>
  </div>

  <div>
    <label>Password</label><br>
    <input type="password" name="password" required>
  </div>

  <br>
  <button type="submit">Create account</button>
</form>

{% endblock %}
